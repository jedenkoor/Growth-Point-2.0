extends ../template

block variables
  - var title = 'Карта сайта'
  - var form = 0
  - var breadcrumbs = 0

block content
  style.
    .map__container{
      margin-top: 50px;
    }
    .h1title{
      margin-bottom: 50px
    }
    table{
      width: 100%;
      border-collapse: collapse;
    }
    td{
      width: 50%;
      border: 1px solid var(--text-bright);
      transition: background-color .1s
    }
    td:hover{
      background-color: var(--circle-pale);
    }
    td a{
      display: block;
      padding: 20px;
    }
    @media screen and (max-width: 767px) {
      .map__container{
        margin-top: 24px;
      }
      tr,
      td {
        display: block
      }
      tr:not(:last-child) td{
        border-bottom: none
      }
      td{
        width: 100%
      }
      td a{
        padding: 10px;
        font-size: 16px;
      }
    }
  .container.map__container.margin-section
    h1.title Карта сайта
    table
      tbody
        tr
          td 
            a(href="main.html" target="_blank") Главная
        tr
          td 
            a(href="projects.html" target="_blank") Проекты
          td 
            a(href="case.html" target="_blank") Страница проекта
        tr
          td 
            a(href="about.html" target="_blank") О студии
        tr
          td 
            a(href="contacts.html" target="_blank") Контакты
        tr
          td 
            a(href="text.html" target="_blank") Текстовая страница
        tr
          td 
            a(href="404.html" target="_blank") 404
